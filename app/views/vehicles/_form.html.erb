<div class="well well-large alert-info">
  <%= form_for(@vehicle) do |f| %>
    <% if @vehicle.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

        <ul>
          <% @vehicle.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :vehicle_type %>
      <%= f.select :vehicle_type, @vehicle_types %>
    </div><br />
    <div>
      <%= f.label :vehicle_engine %>
      <%= f.select :engine_id, @engines%>
    </div><br/>
    <div>
      <%= label_tag 'name', 'Power'%>
      <%= text_field_tag :power, nil, :disabled => true %>
    </div><br/>
    <div id="occupants">
      <%= f.label :occupants %>
      <%= f.number_field :occupants %>
    </div><br />
    <div id="payload_weight">
      <%= f.label :payload_weight_in_kgs %>
      <%= f.text_field :payload_weight %>
    </div><br />
    <div>
      <%= f.label :vehicle_identifier %>
      <%= f.number_field :v_identifier, :maxlength => 4, :placeholder => "(Four digit number only)" %>
    </div><br />
    <%= f.fields_for :construction do |ff| %>
      <div>
        <%= ff.label :start_date %>
        <%= ff.text_field :start_date, :id=> "start_date" %>
      </div>
      <div>
        <%= ff.label :delivery_date %>
        <%= ff.text_field :delivery_date, :id=> "delivery_date" %>
      </div>  
    <% end %>
    <div >
      <%= f.submit %>
    </div>
  <% end %>
</div>