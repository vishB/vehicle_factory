<div class="container">	
	<% if user_signed_in? %>
	  <% unless current_user.admin? %>
	    <h2>Welcome <%=current_user.user_detail.first_name.capitalize%></h2>
	  <% else %>	
	    <h2>Welcome Admin</h2>
	  <% end%>
    <div class="well well-large">
      <ul class="nav nav-pills nav-stacked">
  			<li class="active">
    			<%= link_to 'Admin Options', root_path if current_user.admin? %>
    			<%= link_to 'User Options', root_path unless current_user.admin? %>
  			</li>
  		</ul>
	  	<%= render_breadcrumbs %>
    	<div class="well well-large alert-info"> 
				<% if current_user.try(:admin?) %>
      		<div class="admin-options">
	  				<div class="block">
	  				  <%= link_to (image_tag("users.png",:width=>"100px",:height=>"100px")), users_path,:title=>"Users",:id=>"users",:class=>"thumbnail thumb-back" %>
              <div class="menu-icons-text" >
                <%= link_to 'Users', users_path, :title=>"Users" %></div>
	  				  </div>
	  				<div class="block">
	  				  <%= link_to (image_tag("vehicles.png",:width=>"100px",:height=>"100px")), vehicles_path,:title=>"Vehicles",:id=>"vehicles",:class=>"thumbnail thumb-back" %>
              <div class="menu-icons-text" >
                <%= link_to 'Vehicles', vehicles_path, :title=>"Vehicles" %>
              </div>
	  				</div>
	  				<div class="block">
	  				  <%= link_to (image_tag("vehicle-types.png",:width=>"100px",:height=>"100px")), vehicle_types_path,:title=>"Vehicle types",:id=>"vehicle_types",:class=>"thumbnail thumb-back" %>
              <div class="menu-icons-text" >
                <%= link_to 'Vehicle types', vehicle_types_path, :title=>"Vehicle types" %>
              </div>
	  				</div>
  					<div class="block">
  				   	<%= link_to (image_tag("engines.png",:width=>"100px",:height=>"100px")), engines_path,:title=>"Engines",:id=>"engines",:class=>"thumbnail thumb-back" %>
              <div class="menu-icons-text" >
                <%= link_to 'Engines', engines_path, :title=>"Engines" %>
              </div>
  					</div>
  					<div class="block">
  				   	<%= link_to (image_tag("fuels.png",:width=>"100px",:height=>"100px")), fuels_path,:title=>"Fuels",:id=>"fuels",:class=>"thumbnail thumb-back" %>
              <div class="menu-icons-text" >
                <%= link_to 'Fuels', fuels_path, :title=>"Fuels" %>
              </div>
  					</div>
	        </div>
				<% end %>
			</div>	
		</div>
	<% end %>
</div>